<div class="new-user-landing-page">
  <div class="new-user-landing-column">
    <div class="new-user-welcome-text-box">
      <h1>Piatto</h1>
      <h2>Plan a Menu</h2>
      <h2>Beta</h2>
    </div>
  </div>

  <div class="new-user-landing-column">
    <div class="new-user-box">
      <h2>Signup</h2>
      <%= form_for @user, controller: 'users', action: 'create' do |f| %>
        <div class="new-user-text-field">
          <%= f.text_field :first_name, :placeholder => "First Name" %>
        </div>
        <br>
        <div class="new-user-text-field">
          <%= f.text_field :last_name, :placeholder => "Last Name"  %>
        </div>
        <br>
        <div class="new-user-text-field">
          <%= f.password_field :password, :placeholder => "Password"  %>
        </div>
        <br>
        <div class="new-user-text-field">
          <%= f.text_field :email, :placeholder => "Email"  %>
        </div>
        <br>
          <%= f.submit "Create User", :class => "new-user-button"%>
      <% end %>
    </div>
  </div>
</div>
